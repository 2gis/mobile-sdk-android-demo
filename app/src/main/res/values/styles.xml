<resources>
    <!--  control styles  -->

    <style name="BodyRegularLeftBlack">
        <item name="android:fontFamily">@font/suisse_intl_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="SubheadMediumLeftBlack">
        <item name="android:fontFamily">@font/suisse_intl_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">11.5sp</item>
        <item name="android:lineSpacingExtra">4.5sp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="SwitchItem" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="android:enabled">false</item>
        <item name="android:textAppearance">@style/BodyRegularLeftBlack</item>
        <item name="android:background">?android:attr/colorBackground</item>
        <item name="android:backgroundTint">?attr/colorSurface</item>
        <item name="showText">false</item>
        <item name="lineHeight">18dp</item>
        <item name="useMaterialThemeColors">false</item>
    </style>

    <style name="SwitchItem.Settings" parent="SwitchItem">
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:enabled">false</item>
    </style>

</resources>
